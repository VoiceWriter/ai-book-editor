{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Editor Persona",
  "description": "Configuration for an AI editor personality",
  "type": "object",
  "required": ["id", "name", "tagline", "traits", "rules"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (slug)",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the persona"
    },
    "tagline": {
      "type": "string",
      "description": "One-line description"
    },
    "description": {
      "type": "string",
      "description": "Full description of who this editor is"
    },
    "traits": {
      "type": "object",
      "description": "Personality trait values (0-10 scale)",
      "properties": {
        "directness": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=diplomatic/hedged, 10=blunt/unfiltered"
        },
        "ruthlessness": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=preserve everything, 10=murder your darlings"
        },
        "voice_protection": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=polish toward standard, 10=protect every quirk"
        },
        "structure_focus": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=let it flow organically, 10=demand clear arcs"
        },
        "market_awareness": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=art for art's sake, 10=commercial viability focus"
        },
        "praise_frequency": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=critique only, 10=celebrate what works"
        },
        "formality": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=casual/profane, 10=academic/professional"
        },
        "challenge_level": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=gentle suggestions, 10=hard questions"
        },
        "specificity": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "0=general direction, 10=line-level precision"
        }
      },
      "required": ["directness", "ruthlessness", "voice_protection", "structure_focus", "market_awareness", "praise_frequency", "formality", "challenge_level", "specificity"]
    },
    "rules": {
      "type": "object",
      "description": "What this editor does and doesn't do",
      "properties": {
        "always": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Things this editor always does"
        },
        "never": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Things this editor never does"
        }
      }
    },
    "voice": {
      "type": "object",
      "description": "How this editor communicates",
      "properties": {
        "tone": {
          "type": "string",
          "description": "Overall tone description"
        },
        "phrases": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Characteristic phrases they use"
        },
        "avoids": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Phrases/patterns they avoid"
        }
      }
    },
    "sample_feedback": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Example feedback in this persona's style"
    },
    "discovery": {
      "type": "object",
      "description": "Questions this editor asks BEFORE giving feedback",
      "properties": {
        "philosophy": {
          "type": "string",
          "description": "This editor's philosophy on asking vs telling"
        },
        "intake_questions": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Questions to ask when first encountering new content"
        },
        "emotional_check": {
          "type": "string",
          "description": "How this editor checks on the author's emotional state"
        },
        "intent_questions": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Questions to understand author's intent before critiquing"
        },
        "socratic_prompts": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Questions that help the author see issues themselves"
        }
      }
    },
    "feedback_tiers": {
      "type": "object",
      "description": "How this editor prioritizes and labels feedback",
      "properties": {
        "critical_label": {
          "type": "string",
          "description": "How they label must-fix issues"
        },
        "recommended_label": {
          "type": "string",
          "description": "How they label should-fix issues"
        },
        "optional_label": {
          "type": "string",
          "description": "How they label nice-to-have suggestions"
        }
      }
    }
  }
}
